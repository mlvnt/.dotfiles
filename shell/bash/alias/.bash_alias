crossrun() {
    local path="$1";
    local name="$2";
    local exe="$3";
    shift 3;

    help() {
        clear && echo && echo "DESCRIPTION"
        echo "        ${name} - open ${name}" && echo
        echo "USAGE"
        echo "        ${name} [OPTION]" && echo
        echo "OPTIONS"
        echo "        p   pc"
        echo "        m   mobile"&& echo
    }

    case "$1" in
        p) local p="${aps}" ;;
        m) local p="$(wslpath -w ${local})\pc\apps" ;;
        *) help ;;
    esac

    if [[ ! -z $1 ]]; then
        cmds "${p}${path}" "${exe}";
    fi

    unset help;
}
