#   DYNAMIC DIRECTORY DISPATCH
#   -------------------------------

winhome() {
    case $1 in
        -r) cmd.exe /c echo %HOMEDRIVE% | clip.exe; ;;
        *)  cmd.exe /c echo %USERPROFILE% | clip.exe; ;;
    esac

    # read var < <(powershell.exe -Command Get-Clipboard);
    # read var < <(powershell.exe -sta "add-type -as System.Windows.Forms; [windows.forms.clipboard]::GetText()");
    local var="$(powershell.exe -Command Get-Clipboard)";
    echo "${var}" | tr -d '\r\n';
    cmd.exe /c "echo off" | clip.exe;
}

winhw="$(winhome)";
winhl="$(getpath -u "${winhw}")";

winhwr="$(winhome -r)\\";
winhlr="$(getpath -u "${winhwr}")";

if [[ $(currentdevice) == pc ]]; then
    aps="D:\apps";
    sublime_path="'D:\development\editors\editors\Sublime_Text'";
    revo_path="D:\program-management\uninstallers";
    enpass_path="D:\net\security";
    synctrayzor_path="D:\net\file-sharing";
    jdotxt_path="D:\productivity\notes";
    local=/mnt/d/shared;
else
    aps="${winhwr%?}\pc\apps";
    sublime_path="'${aps}\development\Sublime_Text'";
    revo_path="${aps}\system";
    enpass_path="${aps}\net";
    synctrayzor_path="${winhwr%?}";
    jdotxt_path="${aps}\productivity";
    local=${winhlr%?};
fi;

path_dots=${local}/pc/projects/git/dotfiles/.dotfiles/wsl;
python_scripts=${local}/pc/projects/scripts/Python;
path_dots_local=~/.dotfiles/wsl;
os=$(currentdevice -o);

