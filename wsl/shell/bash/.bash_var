# ┃┏┛┃━┫┃┳┛┃┃━┫┃━┃┃  ┣━ ┗━┓
# ┗┛ ┛ ┇┇┗┛┇┛ ┇┇━┛┇━┛┻━┛━━┛

#█▓▒░ directories

winhw="$(path_converter '%USERPROFILE%')";
winhl="$(wslpath -u "${winhw}")";
winhwr="$(path_converter '%HOMEDRIVE%')\\";
winhlr="$(wslpath -u "${winhwr}")";

if [[ $(currentdevice) == pc ]]; then
    aps="D:\apps";
    local=/mnt/d/shared;
    synctrayzor_path="${aps}\net\file-sharing";
    shared="home";
else
    aps="${winhwr%?}\pc\apps";
    local=${winhlr%?};
    synctrayzor_path="${winhwr%?}";
    shared="shared";
fi;

path_dots=${local}/pc/projects/git/dotfiles/.dotfiles/wsl;
python_scripts=${local}/pc/projects/scripts/py;
path_dots_local=~/.dotfiles/wsl;
os=$(currentdevice -o);
ffont=~/.dotfiles/wsl/theming/.fonts/figlet-fonts;

#█▓▒░ ansi escapes

terminal_colors() {
    BASH_PS1="${1:-false}";
    if [[ ${BASH_PS1} == true ]]; then
        open="\[";
        close="\]";
    else
        open="";
        close="";
    fi;

    esc=$(printf '\033');
    reset="${open}${esc}[0m${close}";
    reset_fg="${open}${esc}[39m${close}";
    reset_bg="${open}${esc}[49m${close}";

    #█▓▒░ formatting

    bold="${open}${esc}[1m${close}";
    faint="${open}${esc}[2m${close}";
    standout="${open}${esc}[3m${close}";
    underlined="${open}${esc}[4m${close}";
    blink="${open}${esc}[5m${close}";
    reverse="${open}${esc}[7m${close}";
    hidden="${open}${esc}[8m${close}";

    #█▓▒░ foreground color

    black="${open}${esc}[38;2;0;0;0m${close}";
    red="${open}${esc}[38;2;255;0;0m${close}";
    green="${open}${esc}[38;2;0;255;0m${close}";
    brown="${open}${esc}[38;2;128;64;64m${close}";
    blue="${open}${esc}[38;2;0;0;255m${close}";
    purple="${open}${esc}[38;2;128;0;128m${close}";
    pink="${open}${esc}[38;2;255;0;255m${close}";
    cyan="${open}${esc}[38;2;0;255;255m${close}";
    yellow="${open}${esc}[38;2;255;255;0m${close}";
    white="${open}${esc}[38;2;255;255;255m${close}";
    gray="${open}${esc}[38;2;128;128;128m${close}";
    light_gray="${open}${esc}[38;2;211;211;211m${close}";
    orange="${open}${esc}[38;2;255;165;0m${close}";
    light_blue="${open}${esc}[38;2;38;139;210m${close}";
    light_red="${open}${esc}[38;2;211;54;130m${close}";
    light_green="${open}${esc}[38;2;0;195;0m${close}";

    #█▓▒░ background color

    black_bg="${open}${esc}[48;2;0;0;0m${close}";
    red_bg="${open}${esc}[48;2;255;0;0m${close}";
    green_bg="${open}${esc}[48;2;0;255;0m${close}";
    brown_bg="${open}${esc}[48;2;128;64;64m${close}";
    blue_bg="${open}${esc}[48;2;0;0;255m${close}";
    purple_bg="${open}${esc}[48;2;128;0;128m${close}";
    pink_bg="${open}${esc}[48;2;255;0;255m${close}";
    cyan_bg="${open}${esc}[48;2;0;255;255m${close}";
    yellow_bg="${open}${esc}[48;2;255;255;0m${close}";
    white_bg="${open}${esc}[48;2;255;255;255m${close}";
    gray_bg="${open}${esc}[48;2;128;128;128m${close}";
    light_gray_bg="${open}${esc}[48;2;211;211;211m${close}";
    orange_bg="${open}${esc}[48;2;255;165;0m${close}";
    light_blue_bg="${open}${esc}[48;2;38;139;210m${close}";
    light_red_bg="${open}${esc}[48;2;211;54;130m${close}";
    light_green_bg="${open}${esc}[48;2;0;195;0m${close}";
}

#█▓▒░ indicator

nfo="${green}[info]${reset}";
error="${red}[error]${reset}";
warn="${orange}[warn]${reset}";
debug="${cyan}[debug]${reset}";
