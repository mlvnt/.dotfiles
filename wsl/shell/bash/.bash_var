#!/bin/bash

# ┓ ┳┳━┓┳━┓o┳━┓┳━┓┳  ┳━┓┓━┓
# ┃┏┛┃━┫┃┳┛┃┃━┫┃━┃┃  ┣━ ┗━┓
# ┗┛ ┛ ┇┇┗┛┇┛ ┇┇━┛┇━┛┻━┛━━┛

#█▓▒░ directories

winhw="$(path_converter '%USERPROFILE%')";
winhl="$(wslpath -u "${winhw}")";
winhwr="$(path_converter '%HOMEDRIVE%')\\";
winhlr="$(wslpath -u "${winhwr}")";

if [[ $(currentdevice) == pc ]]; then
    aps="D:\apps";
    local=/mnt/d/shared;
    synctrayzor_path="${aps}\net\file-sharing";
    shared="home";
else
    aps="${winhwr%?}\pc\apps";
    local=${winhlr%?};
    synctrayzor_path="${winhwr%?}";
    shared="shared";
fi;

path_dots=${local}/pc/projects/git/dotfiles/.dotfiles/wsl;
python_scripts=${local}/pc/projects/scripts/py;
path_dots_local=~/.dotfiles/wsl;
os=$(currentdevice -o);
ffont=~/.dotfiles/wsl/theming/.fonts/figlet-fonts;

#█▓▒░ ansi escapes

esc=$(printf '\033');
reset="${esc}[0m";
reset_fg="${esc}[39m";
reset_bg="${esc}[49m";

#█▓▒░ formatting

bold="${esc}[1m";
faint="${esc}[2m";
standout="${esc}[3m";
underlined="${esc}[4m";
blink="${esc}[5m";
reverse="${esc}[7m";
hidden="${esc}[8m";

#█▓▒░ foreground color

black="${esc}[38;2;0;0;0m";
red="${esc}[38;2;255;0;0m";
green="${esc}[38;2;0;255;0m";
brown="${esc}[38;2;128;64;64m";
blue="${esc}[38;2;0;0;255m";
purple="${esc}[38;2;128;0;128m";
pink="${esc}[38;2;255;0;255m";
cyan="${esc}[38;2;0;255;255m";
yellow="${esc}[38;2;255;255;0m";
white="${esc}[38;2;255;255;255m";
gray="${esc}[38;2;128;128;128m";
light_gray="${esc}[38;2;211;211;211m";
orange="${esc}[38;2;255;165;0m";

#█▓▒░ background color

black_bg="${esc}[48;2;0;0;0m";
red_bg="${esc}[48;2;255;0;0m";
green_bg="${esc}[48;2;0;255;0m";
brown_bg="${esc}[48;2;128;64;64m";
blue_bg="${esc}[48;2;0;0;255m";
purple_bg="${esc}[48;2;128;0;128m";
pink_bg="${esc}[48;2;255;0;255m";
cyan_bg="${esc}[48;2;0;255;255m";
yellow_bg="${esc}[48;2;255;255;0m";
white_bg="${esc}[48;2;255;255;255m";
gray_bg="${esc}[48;2;128;128;128m";
light_gray_bg="${esc}[48;2;211;211;211m";
orange_bg="${esc}[48;2;255;165;0m";

#█▓▒░ indicator

nfo="${green}[info]${reset}";
error="${red}[error]${reset}";
warn="${orange}[warn]${reset}";
debug="${cyan}[debug]${reset}";
