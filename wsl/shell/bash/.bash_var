#!/bin/bash
#   -------------------------------
#   DYNAMIC DIRECTORY DISPATCH
#   -------------------------------

winhw="$(cmd.exe /c echo %USERPROFILE% | tr -d '\r\n')";
winhl="$(wslpath -u "${winhw}")";
winhwr="$(cmd.exe /c echo %HOMEDRIVE% | tr -d '\r\n')\\";
winhlr="$(wslpath -u "${winhwr}")";

if [[ $(currentdevice) == pc ]]; then
    aps="D:\apps";
    local=/mnt/d/shared;
    synctrayzor_path="${aps}\net\file-sharing";
else
    aps="${winhwr%?}\pc\apps";
    local=${winhlr%?};
    synctrayzor_path="${winhwr%?}";
fi;

path_dots=${local}/pc/projects/git/dotfiles/.dotfiles/wsl;
python_scripts=${local}/pc/projects/scripts/Python;
path_dots_local=~/.dotfiles/wsl;
os=$(currentdevice -o);

